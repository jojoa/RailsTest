<% provide(:title, "Den Post " + @post.title + " kommentieren") %>
<h1>
    Einen Post erstellen
</h1>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for([@post,@comment]) do |f| %>
            <%= render 'shared/error_messages_posts' %>


            <%= f.label :text %>
            <%= f.text_area :text, class: 'form-control' %>
        

            <%= f.submit "Posten", class: "btn btn-primary" %>
        <% end %>
    </div>
</div>