<% provide(:title, 'Erstelle Tag') %>
<h1>Erstelle Tag</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@tag, url: tags_new_path) do |f| %>
            

            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control' %>

            <%= f.submit "Erstelle Tag", class: "btn btn-primary" %>
        <% end %>
    </div>
</div>
