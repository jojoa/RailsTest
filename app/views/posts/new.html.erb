<% provide(:title, "Etwas Posten") %>
<h1>
    Einen Post erstellen
</h1>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@post, url: post_path) do |f| %>
            <%= render 'shared/error_messages_posts' %>

            <%= f.label :title %>
            <%= f.text_field :title, class: 'form-control' %>

            <%= f.label :text %>
            <%= f.text_area :text, class: 'form-control' %>
        

            <%= f.submit "Posten", class: "btn btn-primary" %>
        <% end %>
    </div>
</div>